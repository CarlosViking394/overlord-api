{
    "name": "overlord-api",
    "version": "1.0.0",
    "description": "Overlord API - Control Plane for Agent Charlie Services (Agents, Web Apps, Mobile Apps)",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "start": "node dist/index.js",
        "lint": "eslint src/**/*.ts",
        "test": "jest",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:seed": "ts-node scripts/seed.ts",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f"
    },
    "dependencies": {
        "fastify": "^4.24.3",
        "@fastify/cors": "^8.4.1",
        "dotenv": "^16.3.1",
        "drizzle-orm": "^0.34.0",
        "pg": "^8.11.3",
        "bcrypt": "^5.1.1",
        "ioredis": "^5.3.2"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/pg": "^8.10.9",
        "@types/bcrypt": "^5.0.2",
        "ts-node-dev": "^2.0.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.0.0",
        "eslint": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "drizzle-kit": "^0.25.0"
    },
    "engines": {
        "node": ">=20"
    },
    "keywords": [
        "api",
        "gateway",
        "orchestrator",
        "microservices",
        "control-plane"
    ]
}
